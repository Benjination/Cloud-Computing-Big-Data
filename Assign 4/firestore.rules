rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // DEVELOPMENT RULES - Allow all read/write access
    // This is open for educational/demo purposes
    // For production, implement authentication!
    
    match /earthquakeData/{document=**} {
      allow read: if true;   // Anyone can read earthquake data
      allow write: if true;  // Anyone can write earthquake data
      allow delete: if true; // Anyone can delete earthquake data
    }
    
    // Allow access to any other collections
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
